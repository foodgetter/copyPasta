{
"manifest_version":2,
"name":"copyPasta",
"version":"0.1",

"background":{
	"persistent":false,
	"scripts":["bgscript.js"]
},

"content_scripts":[
	{
		"matches":["http://*/*","https://*/*"],
		"js":["contentscript.js"]
	}
],

"commands": {
	"start_copy": {
		"suggested_key": "Alt+C",
		"description": "Start copyPasta on the selection"
	},
		"start_save": {
		"suggested_key": "Alt+S",
		"description": "Save copyPasta"
	}
},

"permissions":[
"activeTab",
"clipboardRead",
"clipboardWrite",
"tabs"
	]
}