{
"manifest_version":2,
"name":"copypasta",
"version":"0.1",

"background":{
	"persistent":false,
	"scripts":["bgscript.js"]
},

"content_scripts":[
	{
		"matches":["http://*/*","https://*/*"],
		"js":["mousetrap.min.js", "contentscript.js"]
	}
],

"commands":{
	"copy":{
		"suggested_key":{
			"default":"Alt+Shift+C",
			"mac":"Alt+Shift+C"
			},
		"description":"initiate copypasta!"
		}
	},

"permissions":[
"activeTab",
"clipboardRead",
"clipboardWrite",
"tabs"
	]
}